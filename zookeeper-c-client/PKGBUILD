# Maintainer: Jimmy Mabey <jimmymabey@gmail.com>

pkgname=zookeeper-c-client
pkgver=3.4.4
pkgrel=1
pkgdesc="The C-based client for connecting to Apache ZooKeeper servers."
arch=('any')
url="https://zookeeper.apache.org/"
license=('APACHE')
depends=('gcc')
makedepends=('make')
source=("http://apache.mirror.iweb.ca/zookeeper/zookeeper-$pkgver/zookeeper-$pkgver.tar.gz")
md5sums=('44e0f1bfdbd102dceb84d08326a1152f')

build() {
	cd $srcdir/zookeeper-$pkgver/src/c
	./configure --prefix=/usr
	make
}

package() {
	cd $srcdir/zookeeper-$pkgver/src/c
	make DESTDIR="$pkgdir/" install
}
