# Maintainer: Jimmy Mabey <jimmymabey@gmail.com>
pkgname=nodejs-zipper
pkgver=0.1.1
pkgrel=1
pkgdesc="Insanely simple zipfile creator for node.js"
arch=('i686' 'x86_64')
url="https://github.com/rubenv/zipper"
license=('BSD')
depends=('nodejs')
makedepends=('gcc' 'make')
install=$pkgname.install
changelog=$pkgname.changelog
source=(https://github.com/rubenv/zipper/archive/$pkgver.tar.gz)
md5sums=('1fbf0911a5bcd650707d1dce6b8102b9')

build() {
  cd "$srcdir/zipper-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/zipper-$pkgver"

  make DESTDIR="$pkgdir/" install
  install -Dm 644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt"
}
